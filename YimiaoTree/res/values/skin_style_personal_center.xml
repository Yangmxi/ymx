<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="personal_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_parent_info</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_info</item>
    </style>

    <style name="personal_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_person_icon</item>
    </style>

    <style name="personal_divider_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_parent_divider_small</item>
        <item name="android:background">@color/divider_small</item>
    </style>

    <style name="personal_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_info_layout_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/personal_center_info_selector</item>
    </style>

</resources>